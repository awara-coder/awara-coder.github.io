{
  "name": "awara-coder.github.io",
  "version": "1.0.0",
  "description": "A modern, responsive portfolio website built with vanilla JavaScript, HTML5, and CSS3. The website features a clean design and is fully customizable through a single JSON configuration file.",
  "main": "index.js",
  "type": "module",
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.56.0",
    "babel-jest": "^30.2.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1"
  },
  "scripts": {
    "test:e2e": "playwright test",
    "test:unit": "jest",

    "start": "npx http-server . -p 8000",
    "format": "prettier --write \"**/*.{js,css,html}\"",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/awara-coder/awara-coder.github.io.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/awara-coder/awara-coder.github.io/issues"
  },
  "homepage": "https://github.com/awara-coder/awara-coder.github.io#readme",
  "lint-staged": {
    "*.js": [
      "eslint --fix -c eslint.config.mjs",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.html": [
      "prettier --write"
    ]
  }
}
